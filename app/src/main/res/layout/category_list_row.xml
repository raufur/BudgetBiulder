<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/categoryIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"/>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="31dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/categoryIcon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toLeftOf="@+id/categoryAmount"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@id/categoryAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/lastTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryName"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-light"/>

    </RelativeLayout>

</RelativeLayout>